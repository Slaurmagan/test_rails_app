<h1 align="center"> Create new category </h1>
<%= render 'shared/errors',obj: @category %>
<%= form_for @category do |f| %>
    <div class="form-group row m40">
        <div class="col-sm-2">
            <%= f.label :name%>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :name,class: "form-control",placeholder: "Enter name of new category",autofocus: true %>
        </div>
    </div>
    <div class="form-group row m25">
        <div class="col-sm-12 form__btn">
            <%= f.submit 'Create',:class => "btn btn-primary"%> 
        </div>
    </div>
<% end %>
<div class="col-xs-4 form__btn">
     <%= link_to  "Cancel request and return to article listing", articles_path %>
</div>
