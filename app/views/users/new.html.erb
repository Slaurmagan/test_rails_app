<h1 align="center">Sign up</h1>
<%= render 'shared/errors',obj: @user %>
<%= form_for @user do |f| %>
    <div class="form-group row m25">
        <div class="col-sm-2">
            <%= f.label :username %>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :username,class: "form-control",placeholder: "Enter username",autofocus: true %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= f.label :email %>
        </div>
        <div class="col-sm-10">
            <%= f.email_field :email,class: "form-control",placeholder: "Enter e-mail"%>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= f.label :password %>
        </div>
        <div class="col-sm-10">
            <%= f.password_field :password,class: "form-control",placeholder: "Enter password"%>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12 form__btn">
            <%= f.submit 'Sign up',:class => "btn btn-primary"%> 
        </div>
    </div>
<% end %>
<div class="col-xs-4 form__btn">
     <%= link_to  "Cancel request and return to home page", root_path %>
</div>
