<h1 align="center">All Alpha Bloggers</h1>
<div align="center" class="justify-content-center m25">
    <%= will_paginate %>
</div>
<% @users.each do |user|%>
    <ul class="listing m25">
        <div class="row justify-content-center">
            <div class="card col-md-8 center" id="card__users">
                <li><%=link_to gravatar_for(user),user_path(user)%></li>
                <li class="list-user__name"><%= link_to user.username,user_path(user) %></li>
                <li><small><%= pluralize(user.articles.count,"article") if user.articles %></small></li>
                <% if logged_in? && current_user.admin? && !user.admin? %>     
                    <li><%= link_to 'Delete this user',user_path(user),method: :delete,data: {confirm: "Are you sure?"}%></li>
                    <li class="mb10"><%= link_to 'Edit this user',edit_user_path(user) %></li>
                <% end %>
            </div>
        </div>
    </ul>
<% end %>
<div align="center" class="justify-content-center m25">
    <%= will_paginate %>
</div>