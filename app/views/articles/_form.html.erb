<%= render 'shared/errors',obj: @article %>
<%= form_for @article do |f| %>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= f.label :title%>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :title,class: "form-control",placeholder: "Title of article",autofocus: true %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= f.label :description %>
        </div>
        <div class="col-sm-10">
            <%= f.text_area :description,class: "form-control",id: "description__area",placeholder: "Description of article"%>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <div class="col-sm-12  col form__btn">
            <%= f.collection_check_boxes :category_ids,Category.all, :id , :name do |cb|%>
                <%= cb.label(class: "checkbox-inline input__checkbox") {cb.check_box(class:"checkbox") + cb.text} %>


            <% end %> 
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-12 form__btn">
            <%= f.submit :class => "btn btn-primary"%> 
        </div>
    </div>
<% end %>
<div class="col-xs-4 form__btn">
     <%= link_to  "Cancel request and return to article listing", articles_path %>
</div>
